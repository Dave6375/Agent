# Environment variables for AI Travel Agent
# Copy this file to .env and fill in your API keys

# Required: OpenAI API key for AI functionality
OPENAI_API_KEY=your-openai-api-key-here

# Optional: SERP API key for web search functionality
# Get from: https://serpapi.com/
SERPAPI_API_KEY=your-serpapi-api-key-here

# Optional: OpenWeatherMap API key for weather functionality  
# Get from: https://openweathermap.org/api
WEATHER_API_KEY=your-weather-api-key-here

# Optional: Telegram bot token for Telegram integration
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Optional: Application configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Optional: Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_RESPONSE_LENGTH=4000